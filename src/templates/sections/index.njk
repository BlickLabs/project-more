  <form name="form-contact-more_desktop" id="form-contact-more_desktop">
    <div class="section_form hide-onMobile">
      <div class="section_form-carousel">
        <div class="section_form-carousel-item">
          <h1 class="section-form-title font-metropolis-bold">Contact us!</h1>
        </div>
        <div class="section_form-carousel-item">
          <div class="section_form-input-wrapper">
            <label for="inputName" class="font-metropolis-bold">Your name</label>
