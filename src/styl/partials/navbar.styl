.cover-lang_menu-d, .cover-lang_menu-m
  height 100%
  width 100%
.coverOn
  z-index -1
.site-navbar
  background #fff
  display flex
  justify-content center
  height 85px // Change
  left 0
  position fixed
  top 0
  width 100%
  z-index 12
  transition height 0.4s, transform 0.2s, 0s
  -webkit-box-shadow 0px 3px 8px -4px rgba(0,0,0,0.75)
  -moz-box-shadow 0px 3px 8px -4px rgba(0,0,0,0.75)
  box-shadow 0px 3px 8px -4px rgba(0,0,0,0.75)
  padding-top 0

  // & + main
  //   padding-top 109px // Change
  
  &.active
    height 158px
    //transform translateY(85px)
    background #fff
    box-shadow none
    padding-top 97px
        
    .header-wrapper
      border-top 1px solid #000
    
    .site-navbar__desktop-logo-container
      transform translate(444px, -90px)
    
    .site-navbar__menu
      //transform translateX(-183px)
      transform translateX(0) 
      height 60px
    
    .second_menu
      //transform translateX(178px)
      transform translateX(6px)
      padding 0
    
    .site-navbar__menu-link
      color #000
      padding 0 8px 0 8px
      height 100%
      display flex
      align-items center
      
    .site-navbar__desktop-logo-top
      display block
    
    .site-navbar__desktop-logo-bottom
      opacity 0
      display none
      
    .site-lang__menu-link
      color #000
    
    .site-navbar__menu-link
      &:hover
        background-color $blueStandar
        color #fff
        height 100%
        display flex
        align-items center
        &:after
          width 0 
          height 0
      
    .site-navbar__menu-link.active
      background-color $blueStandar
      color #fff
      height 100%
      display flex
      align-items center
      &:after
        width 0
        height 0

.header-wrapper
  display flex
  max-width 992px
  justify-content space-between
  width 100%

.site-navbar__menu-trigger,
.site-navbar__mobile-logo-container
  display none

.site-navbar__menu-trigger
  color white // Change

.site-navbar__desktop-logo-container
  display flex
  align-items center
  transition transform .4s
  
  img
    -webkit-transition opacity 0.2s ease-in-out
    -moz-transition opacity 0.2s ease-in-out
    -o-transition opacity 0.2s ease-in-out
    transition opacity 0.2s ease-in-out
  
  .site-navbar__desktop-logo-top
    width 6.9375rem  // Change
    display none
    margin-top 15px
  
  .site-navbar__desktop-logo-bottom
    width 6.9375rem 
    
.site-navbar__menu-container
  flex-grow 1
  text-align right
  height 100%

img[src="img/logos/more-white-mobile.png"]
    display none

.site-navbar__menu
  height 85px
  display flex
  justify-content flex-end
  align-items center
  transition .8s transform

.site-navbar__menu-link
  color black // Change
  font-size remify(14) // Change
  padding 34px 8px 35px
  transition .6s background-color linear
  border-radius 1px
  letter-spacing .2px

  &:hover
    position relative
    height 100%
    display flex
    align-items center
    &:after
      content ''
      background-color #2D698F
      width 100%
      height 5px
      position absolute
      bottom 0
      left 0
    
  &.active
    position relative
    &:after
      content ''
      background-color #2D698F
      width 100%
      height 5px
      position absolute
      bottom 0
      left 0

    // background-color $blueStandar
    // color #fff

.second_menu
  height auto
  display flex
  align-items center
  transition transform .47s
  padding 0

.site-navbar__divider
  width 1px
  background-color $blueStandar
  height 20px
  margin 0 9px

.lang_menu_wrapper
  display flex
  flex-direction row
  /*height 21px*/
  
  &.active

    height auto
    
    .site-lang__menu:hover
      background-color #2D698F

.site-lang__menu
  cursor pointer
  background-color transparent

.site-lang__menu-link
  color #000
  font-size remify(13)
  padding 0 5px
  -webkit-transition color 0.2s linear
     -moz-transition color 0.2s linear
      -ms-transition color 0.2s linear
       -o-transition color 0.2s linear
          transition color 0.2s linear

.lang-down-arrow
  padding 0 5px 2.5px 0
  width 12px

.hamburger-menu-container
  display none

.navbar-hamburguer-visibility
  position absolute
  visibility hidden

.desktop-hide
  display none
  
@media screen and (max-width: 766px)
  .desktop-hide
    display block

  .header-wrapper
    display none

  .site-navbar
    align-items center
    justify-content space-between
    height 70px !important
    padding 0 38px !important

    &-logo
      height 40px
      width 78px

  .navbar-option-link-container
    display none

  .navbar-option-link
    display block
    height auto
    display block
    text-align left
    flex-basis 100%

  .navbar-hamburguer-visibility
    position initial
    visibility visible

  .navbar-hamburguer
    width 33px
    height 33px
    border-radius 50%
    cursor pointer
    display flex
    justify-content center

  .align-content-hamburguer
    display flex
    flex-direction column
    justify-content center

  .line-hamburguer-base
    height 1px
    background-color #fff

  .line-hamburguer-lg
    width: 15px

  .line-hamburguer-md
    width 7.5px

  .margin-vertical-4px
    margin 4px 0px

  .hamburger-menu-container
    background-color #1b1e20
    display inline
    padding-bottom 50px
    position fixed
    top 0
    width 0%
    z-index 13
    bottom 0
    right 0
    overflow scroll
    -webkit-transition width 0.5s
    transition width 0.5s

  .hamburger-menu-header
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    padding 18px 32px 30px 32px

  .hamburger-logo
    height 17px
    width 35px

  .hamburger-close-container
    cursor pointer

  .hamburger-close
    height 35px
    width 35px

  .hamburger-menu-body
    margin-left 0

  .hamburger-option-link
    color #fff
    cursor pointer
    font-size remify(17px)
    letter-spacing 0
    margin 20px 0

    &:hover
      .link-decorator
        opacity 1
        transition all 0.4s

  .link-decorator
    background-color #ffffff
    transition all 0.4s

  .hamburger-text
    padding 10px 0

  .hamburger-dropdown-container
    position relative

  .down-triangle-container
    left 80px
    right initial

  .hamburger-text-container
    align-items center
    display flex
    height 40px
    margin 10px 0 10px 3px
    padding-left 29px

    &:hover
      background-color #242729
      border-left solid 3px #377fac
      font-weight 800
      margin-left 0

    &.link-container-active
      background-color #242729
      border-left solid 3px #377fac
      margin-left 0

  .dropdown
    display initial

  .dropdown-content
    box-shadow initial
    margin-left -36px
    position relative

    & a
      padding-left 36px

  .hamburger-separtor
    background-color #fff
    height 1px
    width 50%

  .lang_menu_wrapper
    justify-content flex-end
    margin-bottom 30px
    padding-right 28px

  .site-lang__menu-link
    color #fff !important
