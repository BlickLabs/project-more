footer
  padding 4rem 0
  background-image url('../img/backgrounds/footer-bgd.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  total-center()
  flex-direction column

.site-footer__menu
  display flex
  color black
  margin 2rem 0 3rem 0

.site-footer__menu-link
  font-size remify(14)
  color #000
  padding 0 15px
  border-right 1px solid $blueStandar

  &.active
    font-weight bold
    color $darkBlue
  
  &:hover
    color $blueStandar

.site-footer-menu-col2
  .site-footer__menu-link:last-child
    border none

.site-footer__menu-copyright
  font-size remify(14)

@media screen and (max-width: 768px) // Change
  .site-footer__menu
    margin 40px 0 60px calc(50% - 15px) !important
    width 100%

  .site-footer-menu-col2, .site-footer-menu-col1
    display flex
    flex-direction column
    .site-footer__menu-link
      padding 5px 15px
  
  .site-footer-menu-col2
    .site-footer__menu-link
      border none
  
  
