.portfolio-logo-transform 
  transition all 0.2s ease-in

.portfolio-logo-transformhover 
  transition all 0.2s ease-in
  transform scale(1.2)

.portfolio-view__background 
  background-image url(../img/backgrounds/projects-bgd.png)
  background-size cover
  background-repeat no-repeat
  width 100%
  margin 82px 0 0
  total-center()
  flex-direction column
  opacity 0.80 

.portfolio-view__background-title 
  total-center()
  flex-direction column
  margin 89px 0 0
  p 
    color #3b84af
    font-size remify(44px)
  span 
