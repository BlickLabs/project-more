// ========== section_services ========== //
.section_services
  background-color #efefef 
  height calc(100% - 50px)

.section_services-wrapper
  height 100%

.section_services-container
  position relative
  max-width 1030px
  height 100%
  padding-top 3.75rem
  padding-bottom 3.75rem
  center-block()

.section_services-title-wrapper
  @extends .section_projects-title-wrapper

.section_services-tabs
  display flex
  margin 25px 0

  .section_services-tablink
    position relative
    width 33.33%
    padding 20px 0
    border none
    border-bottom 2px solid $blueStandar
    background-color inherit
    transition 0.3s
    outline none

    &:hover
      background-color #d6d6d6
    
    &.open-tab
      p
        color #000
        font-weight bold
        letter-spacing 1px

    &.open-tab::after
      content ''
      width 100%
      height 5px
      background-color $blueStandar
      position absolute
      bottom -7px
      left 0

    .section_services-tablink-title
      color #9d9d9d
  
.section_services-tabcontent-wrapper
  total-center()
  -webkit-animation fade 1s
  -moz-animation fade 1s
  animation fade 1s
  
  .section_services-tabcontent-img
    width 488px
    height 329px

.section_services-tabcontent
  padding 70px 45px 70px 50px;
  width 512px 
  height 412px
  background-color $blueStandar
  color #fff 

  img
    width 21%
    margin-top 15px

.section_services-tabcontent-title
  font-size remify(39)
  position relative

.section_services-tabcontent-divider
  width 6%
  height 2px
  background-color #fff
  margin-top 15px
  margin-bottom 20px

.section_services-btn
  background-color $darkBlue
  width 137px
  height 50px
  margin-top 30px
  total-center()
    
  p
    color #fff
    font-size remify(15)

-webkit-keyframes fade
    from opacity 0
    to opacity 1

@keyframes fade
    from opacity 0
    to opacity 1


  



