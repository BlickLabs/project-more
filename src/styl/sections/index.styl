// ========== section_services ========== //
.section_services
  background-color #efefef 
 
.section_services-container
  position relative
  max-width 1030px
  padding-top 11rem
  padding-bottom 11rem
  center-block()
  display flex
  justify-content space-around
  flex-direction column

.section_services-title-wrapper
  @extends .section_projects-title-wrapper

.section_services-tabs
  display flex
  margin-bottom 100px

  .section_services-tablink
    position relative
    width 33.33%
    padding 20px 0
    border none
    border-bottom 2px solid $blueStandar
    background-color inherit
    transition 0.3s
    outline none
    cursor pointer
    &:hover
      background-color #d6d6d6
    .section_services-tablink-title
      color #9d9d9d

.section_services-tablink.open-tab
  p
    color #000 !important
    font-weight bold
    letter-spacing 1px

.section_services-tablink.open-tab::after
  content ''
  width 100%
  height 5px
  background-color $blueStandar
  position absolute
  bottom -5px
  left 0

.section_services-tabcontent-wrapper
  width 100%
  total-center()
  .section_services-tabcontent-img
    width 50%
    height auto

.section_services-tabcontent
  padding 0 25px 0 30px !important
  width 50%
  height 412px
  background-color $blueStandar
  color #fff 
  display flex
  flex-direction column
  justify-content center
  img
    width 70px
    margin-top 15px

.section_services-tabcontent-title
  font-size remify(39)
  position relative

.section_services-tabcontent-divider
  width 6%
  height 2px
  background-color #fff
  margin-top 15px
  margin-bottom 20px

.section_services-tabcontent-text
  word-spacing 3px
  line-height 1.3

.section_services-btn
  background-color $darkBlue
  width 137px
  height 50px
  margin-top 30px
  total-center()
  &:hover
    background-color #102c3e
  p
    color #fff
    font-size remify(15)



//----------------------fin section_services-------------------------

// ========== section_ Form ========== //
.section_form .slick-list
  padding-bottom 13px !important 

label.error
  font-size .8em !important

.section_form
  background-color $blueStandar
  total-center()
  height 45vh
  width 100%

.section_form-carousel
  center-block()
  width 100%
  
  .slick-prev
    display none !important

  .slick-right
    right 0 

.section_form-carousel-item
  height 111.59px !important
  position relative
  outline none
  display flex !important
  align-items center
  justify-content space-between
  margin 0 100px

  .section_form-input-wrapper
    center-block()
  label
    color #fff
    font-size remify(44)
  
  input
    padding 10px
    font-size remify(17)
    color #FFF
    appearance none
    border none
    border-radius 0px
    box-shadow none
    outline none
    background transparent
    border-bottom 2px solid #fff
  p
    color $lightBlue
    font-size remify(17)

.carousel-arrow
  position absolute
  bottom 0
  width 20px
  cursor pointer

.section_form-carousel-next
  right 0

.section_form-carousel-prev
  left 0
  transform rotate(180deg)

.carousel-arrow.last-prev
  bottom 0 

.section_form-btn
  @extends .section_services-btn
  width 115px
  border none
  justify-content space-around
  padding 0 15px
  margin-left auto
  margin-top 10vh
  cursor pointer
  img
    width 1rem
  p
    color #fff
    font-size 15px
//----------------------fin section_form-----------------

// ========== section_Work With Us ========== //
.section_workWithUs
  background-image url('../img/backgrounds/work-wUs-bgd.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  height 80vh
  total-center()
  flex-direction column

.section_workWithUs_title
  font-size remify(44)
  text-align center
  margin-bottom 5%
  color #fff

.section_workWithUs-btn
  @extends .section_projects-blue-btn

.section_form_mobile
  display none

@media screen and (min-width 40.063em) and (max-width 64em) 
  .section_form-carousel-item 
    p
      display none
@media screen and (max-height: 40em)
  .section_one-title-container
    left 9rem
    top 12.5%
  .section_one-title
    font-size remify(63)
  
  .section_one-description
    font-size remify(18)
  
@media screen and (max-width: 40em)

  .section_one-wrapper
    display block
    padding-top 30px

  .section_one-text-wrapper
    padding-left 25px
    padding-right 25px

  .section_one-container
    justify-content space-between
    
  .hide-onMobile
    display none

  .section_one-title-wrapper
    margin 0 0 0 25px

  .section_one-title
    font-size remify(45)
    text-align left
  
  .section_one-description-wrapper
    @extends .section_one-title-wrapper
    margin 0 25px
  
  .section_one-description
    margin-top 30px
    line-height 1.3
  
  .section_one-blue-divider
    height 10rem

  .section_one-description-container
    margin-bottom 30px
    left 30px
    bottom 20%

  .section_one-title-container
    margin-bottom 0
    left 30px
  
  .section_one-blue-box
    width 80%
    left 50%
    transform translateX(-50%) !important
  
  .section_services-tabcontent-wrapper
    flex-wrap wrap
    .section_services-tabcontent-img
      width 100%
      height auto
  
  .section_services-tabcontent
    padding 70px 30px 70px 35px
    width 100%

  .section_services-container
    padding-bottom 0
    padding-top 5.5rem

  .section_services-title-wrapper
    margin-bottom 4rem

  .section_form_mobile
    position relative
    display flex
    background-color #f0f0f0
    padding 50px 30px 30px 30px
    height 400px
    flex-direction column
    justify-content flex-start

  .section_form_mobile-item
    display flex
    flex-direction column-reverse
    align-items flex-start
    justify-content flex-end
    margin 15px 0 
    position relative

    label
      color #c9c9c9
    label.error
      color red
      position absolute
      top -20px
      right 0
           

    input, textarea
      @extends .section_form-carousel-item input
      width 100%
      border-radius 0px
      color #4d4d4d
      border none

      &:focus
        outline none
        border-bottom 2px solid $darkBlue
        border-radius 0px
        margin-bottom 35px

      &:focus + label
        font-size remify(26)
        color $darkBlue
        font-weight bold
        
      &:focus + label.error
        color red
        position absolute
        top -20px
        right 0
  
  .section_form_mobile-btn
    @extends .section_services-btn
    border none
    position absolute
    right 30px
    bottom 30px
    width 100px
    justify-content space-around
    padding 0 15px
    margin-left auto
    
    img
      width 1.3rem

  .section_projects
    background-image url('../img/backgrounds/projects-bgd-mobile.png')
    background-position 0 14%
    background-size 100% 14%
    background-repeat no-repeat