// ========== section_ Form ========== //
.section_form
  background-color $blueStandar
  total-center()
  height 45vh

.section_form-carousel
  center-block()
  width 85vw
  
  .slick-prev
    display none !important

  .slick-right
    right 0 

.section_form-carousel-item
  display flex !important
  align-items center
  justify-content center
  margin 0 30px

  p
    color $lightBlue
    font-size remify(17)
  
  input
    visibility hidden
    border none
    appearance none
    box-shadow none
    background transparent

.section_form-carousel-item.slick-center
  p
    color #fff
    font-size remify(44)
  
  input
    visibility visible
    padding 10px
    font-size remify(17)
    color #FFF
    border none
    appearance none
    box-shadow none
    background transparent
    border-bottom 2px solid #fff

//----------------------fin section_form-----------------

