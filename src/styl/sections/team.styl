
* 
  box-sizing border-box

.view_team
  padding 155px 0 70px 0
  width 100vw

.view_team-container
  width 100vw
  
.view_team-title-container
  center-block()
  margin-bottom 35px

.view_team-title
  font-size remify(44)
  color $blueStandar
  text-align center

.view_team-description-container
  center-block()
  margin-bottom 70px

.view_team-description
  font-size remify(20)
  text-align center

.view_team-items-container
  display flex
  flex-wrap wrap
  width 100%
  
  .view_team-member-item
    width 20%
  .view_team-member-item.join-us-wrapper
    width 40%
    .view_team-member-photo
      background-size 50% 100%
      background-repeat repeat-x

 .view_team-member-photo
    display flex
    justify-content center
    align-items flex-end
    background-image url('../img/team/bgd_team.jpg')
    background-size 100% 100%
    height 13.875rem
    img
      height 90%

.view_team-member-description
  padding 20px 40px 40px 40px

.view_team-member-name
  font-size remify(15)
  line-height 3.13
  text-align center
  letter-spacing 0.3px
  color #172a37

.view_team-member-position
  font-size remify(10)
  letter-spacing 2.6px
  text-align center
  color #141414

.view_team-member-divider
  width 18px
  height 1px
  background-color #e6e6e6
  margin 15px auto

.view_team-member-phrase
  font-size remify(8)
  line-height 1.63
  letter-spacing 0.2px
  text-align center
  color #172a37

@media screen and (min-width 40.063em) and (max-width 64em) 
  .view_team-member-item
    width 33.33% !important
  .view_team-member-item.join-us-wrapper
    width 66.66% !important

@media screen and (max-width: 40em)
  .view_team
    padding 110px 0
  
  .view_team-title-container,
  .view_team-description-container
    padding 0 20px 0 30px 
  .view_team-title
    font-size remify(38)
  .view_team-title, 
  .view_team-description
    text-align left

  .view_team-member-item
    width 100% !important
  .view_team-member-item.join-us-wrapper
    width 100% !important
    .view_team-member-photo
      background-size 50% 100%
      background-repeat repeat-x

  .view_team-member-photo
      height 15.5rem
      
  
  .view_team-member-description
    padding 15px 30px 45px 30px
  
  .view_team-member-name
    font-size remify(22)
  .view_team-member-position
    font-size remify(16)
  .view_team-member-phrase
    font-size remify(12)




