.referrals-view
  @extends .careers-view
  background-image url('../img/backgrounds/referrals-bgd.png')
  background-position-y 73%
  background-repeat no-repeat
  background-size 100% 30%

.referrals_view-wrapper
  max-width 1030px
  center-block()
  
.referrals-view__title
  @extends .careers-view__title

.referrals_view__description
  text-align center
  font-size remify(20)
  line-height 27px
  margin 50px 0

hr
  border none 
  background-color #dcdcdc
  width 70%
  height 1px
  center-block()
  margin-bottom 50px

.referrals_view-container
  width 60%
  center-block()
  .referrals_view-condition-wrapper
    display flex
    align-items center

    .referrals-view-hyphen
      height 1px
      width 23px
      background-color #000
      margin-right 15px

    .referrals_view-condition-text
      font-size remify(20)
      line-height 27px

  .referrals_view-comision-text
    margin-left 38px
    font-size remify(17)
    line-height 33px
    margin-top 30px

.referrals-view-form
  @extends .careers-view__optional-form
  padding-top 0

@media screen and (max-width: 768px)
  .referrals-view
    padding 155px 0
    background-position-y 95%
    background-size 100% 12%

  .referrals_view-wrapper
    padding 0 35px
    hr
      width 100%
  .referrals-view__title
    padding 0
    font-size remify(30)

  .referrals_view__description
    text-align left
    font-size remify(17)

  .referrals_view-container
    width 100%

  .referrals-view-hyphen
    display none

  .referrals_view-condition-text
    @extends .referrals_view__description
    margin 0 !important
  
  .referrals_view-comision-text
    margin 0 !important
    text-align left
    font-size remify(14) !important
    line-height 27px !important
    br
      display none
  
  .referrals-view-form
    display block
    form
      width 100%
      padding 50px 0 30px 0
      .careers-view__optional-form-group
        width 100%
        label
          width 100%
          padding 5px 0 5px 40px
          margin 0
        input, textarea
          margin 0 40px
          width calc(100% - 80px)
          &:focus
            margin 20px 40px
          &:focus + label
            padding 5px 0 5px 36px