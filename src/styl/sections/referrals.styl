.referrals-view
  @extends .careers-view
  background-image url('../img/backgrounds/referrals-bgd.png')
  background-position-y 73%
  background-repeat no-repeat
  background-size 100% 30%

.referrals_view-wrapper
  max-width 1030px
  center-block()
  
.referrals-view__title
  @extends .careers-view__title

.referrals_view__description
  text-align center
  font-size remify(20)
  line-height 27px
  margin 50px 0

hr
  border none 
  background-color #dcdcdc
  width 70%
  height 1px
  center-block()

.referrals_view-container
  width 60%
  center-block()
  .referrals_view-condition-wrapper
    display flex
    align-items center

    .referrals-view-hyphen
      height 1px
      width 23px
      background-color #000
      margin-right 15px

    .referrals_view-condition-text
      font-size remify(22)
      line-height 27px
      margin 35px 0

  .referrals_view-comision-text
    margin-left 38px
    font-size remify(19)
    line-height 33px

.referrals-view-form
  @extends .careers-view__optional-form
  padding-top 0
  form
    height 525px
    width 100%
    .careers-view__optional-form-group
      position relative
    label.error
      font-weight normal
      color red
      border-left none 
      position absolute
      right 0
      top 0
    input, textarea
      &:focus + label.error
        font-weight normal
        color red
        border-left none 
        position absolute
        right 0
        top 0

@media screen and (min-width 768px) and (max-width 1024px) 
  .referrals_view-container
    width 75%
@media screen and (max-width: 767px)
  .referrals-view
    padding 100px 0
    background-position-y 95%
    background-size 100% 12%

  .referrals_view-wrapper
    padding 0 35px
    hr
      width 100%
  .referrals-view__title
    padding 0
    font-size remify(32)

  .referrals_view__description
    text-align left
    font-size remify(22)
    margin 15px 0 35px 0

  .referrals_view-container
    width 100%

  .referrals-view-hyphen
    display none

  .referrals_view-condition-text
    @extends .referrals_view__description
    margin  35px 0 0 0 !important
  
  .referrals_view-comision-text
    margin 30px 0 0 0 !important
    text-align left
    line-height 27px !important
    br
      display none

  .referrals-view-form
    display block
    margin 0 -15px
    form
      width 100%
      height 450px
      padding 50px 0 30px 0
      margin 35px auto 0 auto
      .careers-view__optional-form-group
        width 100%
        label
          width 100%
          padding 5px 0 5px 40px
          margin 0
        label.error
          top -20px
          font-size 0.7rem !important
        
        input, textarea
          border-radius 0px
          margin 0 40px
          width calc(100% - 80px)
          color #c4c4c4
          &:focus
            margin 20px 40px
            padding-bottom 5px
            border-radius 0px
          &:focus + label
            padding 5px 0 5px 36px

          &:focus + label.error
            top -20px
            font-size 0.7rem !important