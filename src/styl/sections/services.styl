.services_view
  background-image url('../img/backgrounds/services-bgd1.jpg')
  background-repeat no-repeat
  background-size 100% 50%
  background-position top right
  padding 155px 0
  width 100vw

.services_view-wrapper
  margin 0 auto
  max-width 1280px
  width 90%

.services_view-title
  font-size remify(46)
  color $blueStandar
  text-align center

.services_view-options-wrapper
  total-center()
  flex-direction row
  margin 60px 0 100px

.services_view-options-container
  total-center()
  flex-direction row
  width 230px
  height 61px
  margin 0 15px
  background-color #fff
  -webkit-box-shadow 0px 3px 8px 0px rgba(0,0,0,0.30)
  -moz-box-shadow 0px 3px 8px 0px rgba(0,0,0,0.30)
  box-shadow 0px 3px 8px 0px rgba(0,0,0,0.30)
  a
    text-decoration none
  p
    color #000
    margin-left 15px

  img[alt="website icon"]
    width 22px
    height 20px
  img[alt="eCommerce icon"]
    width 25px
    height 25px
  img[alt="software icon"]
    width 29px
    height 19px

.services_view-item
  total-center()
  flex-direction row

  .services_view-item-img
    width 530px
    height 386px
    display flex
    align-items center
    img 
      width 100%
    img[src="img/services-websites.jpg"],
    img[src="img/services-eCommerce.jpg"],
    img[src="img/services-software.jpg"]
      display block    

  .services_view-item-details
    width 609px
    height 386px 
    padding 5px 150px 20px 55px
    display flex
    flex-direction column
    justify-content space-around
    position relative

    .services_logo_more
      position absolute
      right -22px 
      top -5px
      width 35px

    p.services_view-item-subtitle
      padding 3px 14px
      border-left 1px solid #000
      letter-spacing 5.5px

    h1
      font-size 35px
      line-height 42px
    
    p.service_view-item-details-description
      font-size 17px
      line-height 23px

    .services_view-item-details-projects
      display flex
      flex-direction row
      justify-content flex-start
      img
        width 125px
        height 75px
        -webkit-transition all .2s ease-in
        -ms-transition all .2s ease-in
        -moz-transition all .2s ease-in
        transition all .2s ease-in

      .services_view-item-details-project2
        margin 0 10px

      img:hover
        -webkit-transition all .2s ease-in
        -webkit-transform scale(1.1)
        -ms-transition all .2s ease-in
        -ms-transform scale(1.1)  
        -moz-transition all .2s ease-in
        -moz-transform scale(1.1)
        transition all .2s ease-in
        transform scale(1.1)

    div.services_view-item-subtitle
      img
        width 115px
      img:nth-child(1)
        margin-right 15px
      p
        border-right 1px solid #000
        // border-left 1px solid #000
        padding 3px 14px
        width 300px
        text-align right
        letter-spacing 5.5px
        margin-bottom 15px
      .services_shopify-wrapper
        display flex
        align-items center
        justify-content flex-end

  .services_view-item-details.details1:after
    position absolute
    content ''
    right 0
    top -75px
    width 1px
    height 60px
    background-color #000
    animation tada_more_logo linear 1s 2 forwards
    transform-origin 20% 100%        

.services_view-item:nth-child(2)
  margin 120px 0 200px 0
  flex-direction row-reverse
  .services_view-item-details
    padding 0px 55px 0 120px
    align-items flex-end
  h1,p.service_view-item-details-description
    text-align right
  
.services_view-item:nth-child(3)
  position relative
  &:after
    content ''
    position absolute
    background-color #f5f5f5
    width 604px
    height 530px
    right 135px
    top -60px
    z-index -1

.services_view
  position relative
  z-index 0
  &:after
    content ''
    position absolute
    width 400px
    height 760px
    background-color #f5f5f5
    left 0
    top 470px
    z-index -1

@keyframes tada_more_logo
  0% { transform:  rotate(0deg) scaleX(1.00) scaleY(1.00)}
  10%, 20% { transform:  rotate(-8deg) scaleX(0.80) scaleY(0.80)}
  30%, 50%{ transform:  rotate(8deg) scaleX(1.20) scaleY(1.20)}
  40%, 60% { transform:  rotate(-8deg) scaleX(1.20) scaleY(1.20)}
  100% { transform:  rotate(0deg) scaleX(1.00) scaleY(1.00)}
.services_logo_more
  animation tada_more_logo linear 1s 2 forwards
  transform-origin 20% 100%

@media screen and (max-width: 768px)
  .services_view
    padding 100px 0 45px 0
    background-size 200% 25%
    &:after
      content ''
      position absolute
      width 400px
      height 700px
      background-color #f5f5f5
      left 0
      top calc(100% - 700px) !important
      z-index -1
  
  .services_logo_more
    display none

  .services_view-wrapper
    width 100%

  .services_view-title
    text-align left
    margin-left 40px
  
  .services_view-options-container
    width 65px
    height 60px
    position relative
    .services_view-options-title
      width 70px
      position absolute
      bottom -37px
      font-size 13px
      margin 0 auto
      text-align center
      left 50%
      -webkit-transform translateX(-50%)
      transform translateX(-50%)

  .services_view-item
    flex-wrap wrap

    .services_view-item-img
      width 100%
      height auto
      img[src="img/services-websites.jpg"],
      img[src="img/services-eCommerce.jpg"],
      img[src="img/services-software.jpg"]
        display none
    
    .services_view-item-details
      padding 0px 30px 0 35px
      width 100%
      height auto

      .services_view-item-subtitle
        display block !important
        margin-bottom 25px
        padding 3px 0 3px 14px !important
      
      .subEcommerce
          padding 3px 0px 3px 0
          img
            width 108px !important
          p
            padding 3px 6px !important
            letter-spacing 2.5px !important
            margin-bottom 25px
            margin-left auto !important
            width 9.5rem
            text-align center

      h1
        font-size remify(30)
        margin-bottom 15px
        padding-right 65px
        line-height 34px
      
      .service_view-item-details-description
        margin-bottom 30px
        padding-right 15px
      .services_view-item-details-projects
        display flex
        flex-direction row
        margin-left -35px
        margin-right -35px
        margin-bottom 30px

        a
          width calc(33.3333% - 5px)

        img
          width 100%
          height auto
          transition all 0.2s ease-in

        a:nth-child(2)
          width calc(33.3333% - 5px)
          margin 0 10px
          .services_view-item-details-project2
            margin 0
  
  .services_view-item-details.details1:after
    position absolute
    content ''
    width 0 !important
    height 0 !important
    background-color transparent
  
  .services_view-item:nth-child(2)
    margin 25px 0
    flex-direction row-reverse
    .services_view-item-details
      padding 0px 35px 0 40px
      h1, p.service_view-item-details-description
        padding-right 0
      
      .services_view-item-details-projects
        margin-left -40px !important
        margin-right -35px !important
  
  .services_view-item:nth-child(3)
    &:after
      content: '';
      position: absolute;
      background-color: #f5f5f5;
      width: 198px;
      height: 530px;
      right: 0;
      top: -125px;
      z-index: -1;