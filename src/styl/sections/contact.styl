* {
  margin: 0
  padding: 0
}

.contact-view__background {
  background-image: url();
}

.contacto-view__title {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #3b84af;
  font-size: remify(44px);
  margin: 180px 0 0;
}

.contacto-view__form {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.contacto-view__form-box1 {
  display: flex;
  flex-direction: column;
  width: 50.75em;
  padding: 4.56em 24.12em 0 6.25em;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.19);
}

form {
  label {
    color: #141414;
    font-size: remify(15px);
    margin: 0 0 0 13px;
  }
  input {
    margin: 1em 0 3.12em;
    border: 0;
    border-bottom: solid 1px #e5e5e5;
    width: 326px;
  }
  textarea {
    margin: 26px 0 0;
    border: solid 1px #e5e5e5;
  }
}

.contact-form__button {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: remify(12px);
  background-color: #223a48;
  cursor: pointer;
  border-radius: 1px
  width: 96px;
  height: 42px;
  margin: 26px 0 89px 0;
  align-self: flex-end;
}